<ul>
  <li>
    Sort By
    <ul>
      <li><a href="/client/products?sort_by=price">Price- Low to High</a></li>
      <li><a href="/client/products?sort_by=price&&sort_order=desc">Price- High to Low</a></li>
      <li><a href="/client/products?sort_by=name">Name- A to Z</a></li>
      <li><a href="/client/products?sort_by=name&&sort_order=desc">Name- Z to A</a></li>
    </ul>
  </li>
  <li>
    Categories
    <ul>
      <li><a href="/client/products?category=Nike">Nike</a></li>
      <li><a href="/client/products?category=Adidas">Adidas</a></li>
    </ul>
  </li>
</ul>


<div class="row">
  <% @products.each do |product|%>
    <div class="col-md-4">
      <h2><a href="/client/products/<%= product["id"] %>"><%= product["name"] %></a></h2>
      
      <% if product["discounted"] %>
        <h3>Discount Item!</h3>
      <% else %>
        <h3>Everyday Value!</h3>
      <% end %>
      
      <h3 class="<%= 'red' if product['discounted'] %>"><%= product["formatted"]["price"] %></h3>
      
      <h5>Description: <%= product["description"] %></h5>
      <h5>Supplier: <%= product["supplier"]["name"] %></h5>
      <img src="<%= product["image_url"]%>" alt="">


      <div class="card mb-5" style="width: 18rem;">
        <img class="card-img-top" src="<%= product["image_url"] %>" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= product["name"]%></h5>
          <h5 class="card-title"><%= product["title"]%></h5>
          <p class="card-image"><%= images["image_url"]%></p>
          <p class="card-text">Price: <%= product["formatted"]["price"]%></p>
          <p class="card-text">Description: <%= product["description"]%></p>
          <p class="card-text">Supplier: <%= product["supplier"]["name"]%></p>
          <a href="/" class="btn btn-primary">Go back to Homepage</a>
        </div>
      </div>

    </div>

  <% end %>
</div>


