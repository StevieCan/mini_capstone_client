<h1><%= @product["id"]%></h1>
<h2>Name: <%= @product["name"]%></h2>
<h3>Price: <%= @product["formatted"]["price"]%></h3>
<h3>Tax: <%= @product["formatted"]["tax"]%></h3>
<h3>Total: <%= @product["formatted"]["total"]%></h3>
<h4>Image Url:<%= @product["image_url"]%></h4>
<h5>Description:<%= @product["description"] %></h5>
<h5>Supplier:<%= @product["supplier"]["name"] %></h5>

<% @product["images"].each do |image| %>
  <img src="<%= image["url"] %>">
<% end %>
<br>

<%= form_tag "/client/orders", method: :post do %>
  <div>
    <input type="hidden" name="product_id" value="<%= @product['id'] %>">
  </div>
  <div>
    Quantity: <input type="text" name="quantity">
  </div>
  <input type="submit" name="Create Order">

<% end %>

<h6>Supplier: <%= @product["supplier"]["name"] %></h6>


<a href="/client/products/<%= @product['id'] %>/edit">Edit</a>
<a href="/client/products/<%= @product['id'] %>" data-method="delete">Delete</a>

<a href="/client/products">Home</a>
